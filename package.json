{
    "name": "template-typescript",
    "version": "2.0.0",
    "description": "Template for TypeScript projects",
    "author": "Vinicius Egidio <me@vinicius.io>",
    "license": "MIT",
    "type": "module",
    "exports": {
        "import": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "engines": {
        "node": ">=20.10.0"
    },
    "dependencies": {
        "@types/config": "3.3.4",
        "@types/jest": "29.5.12",
        "@types/node": "20.12.2",
        "@typescript-eslint/eslint-plugin": "7.4.0",
        "@typescript-eslint/parser": "7.4.0",
        "config": "3.3.11",
        "eslint": "8.57.0",
        "eslint-plugin-prettier": "5.1.3",
        "jest": "29.7.0",
        "pkgroll": "2.0.2",
        "prettier": "3.2.5",
        "ts-jest": "29.1.2",
        "tsx": "4.7.1"
    },
    "devDependencies": {
        "typescript": "5.4.3",
        "winston": "3.13.0"
    },
    "scripts": {
        "build": "pkgroll --minify --target=node20.10.0",
        "lint": "eslint . --ext .ts",
        "start": "tsx src/index.ts",
        "test": "jest",
        "upgrade": "pnpm dlx npm-check-updates -u"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/vegidio/template-typescript"
    }
}
