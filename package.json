{
    "name": "template-typescript",
    "version": "2.0.0",
    "description": "Template for TypeScript projects",
    "author": "Vinicius Egidio <me@vinicius.io>",
    "license": "MIT",
    "type": "module",
    "exports": {
        "import": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "engines": {
        "node": ">=20.10.0"
    },
    "dependencies": {
        "@types/config": "3.3.5",
        "@types/jest": "29.5.14",
        "@types/node": "22.10.1",
        "@typescript-eslint/eslint-plugin": "8.16.0",
        "@typescript-eslint/parser": "8.16.0",
        "config": "3.3.12",
        "eslint": "9.16.0",
        "eslint-plugin-prettier": "5.2.1",
        "jest": "29.7.0",
        "pkgroll": "2.5.1",
        "prettier": "3.4.1",
        "ts-jest": "29.2.5",
        "tsx": "4.19.2"
    },
    "devDependencies": {
        "typescript": "5.7.2",
        "winston": "3.17.0"
    },
    "scripts": {
        "build": "pkgroll --minify --target=node20.10.0",
        "lint": "eslint . --ext .ts",
        "start": "tsx src/index.ts",
        "test": "jest",
        "upgrade": "pnpm dlx npm-check-updates -u"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/vegidio/template-typescript"
    }
}
